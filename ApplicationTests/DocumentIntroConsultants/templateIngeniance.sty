% % PAGE DE TITRE

% titleIngeniance : page de titre
% #1 : descendre le titre du milieu (en mm)
% #2 : lien de l'image de fond
% #3 : décalage de l'image de fond de x = -#3 mm
% #4 : décalage de l'image de fond de y = -#4 mm
% #5 : largeur de l'image de fond de #5 mm
% A redefinir : \titre \soustitre \titre \soustitre \auteurs
\newcommand\titleIngeniance[6]{
\fontfamily{phv}
	\makeatletter
	\let\thetitle\@title        % Document title saved in command
	\let\theauthor\@author      % Document author saved in command
	\makeatother
	
	\newgeometry{left=2cm,right=2cm,bottom=2cm,top=2cm}

	\begin{titlepage}
		
		\definecolor{INGENIANCE_PINK}{cmyk}{0,0.709,0.614,0.137}
		\begin{picture}(183,250)(27,27)
		\put(0,120){\includegraphics[width=215mm]{images/ImagePageDAccueil.png}}
		\put(10,265){\includegraphics[scale=1]{images/Entete.png}}
		\put(8,250){\includegraphics[scale=0.2]{images/slogan.png}}
		\put(145,25){
			\begin{minipage}[c]{70mm} \begin{flushleft}
			\textcolor{gray}{
				\fontsize{13pt}{13pt}\selectfont \textbf{\textcolor{INGENIANCE_PINK}{\underline{IN}}GENIANCE\\ 54 Avenue du Général Leclerc \\ 92100 Boulogne-Billancourt \\ +33 (0)1 46 10 45 00\\ SAS RCS NANTERRE 48372613900031}}
				\end{flushleft}
			\end{minipage}}
		\put(5,150){\begin{minipage}[c]{150mm}\footnotesize  \rotatebox{90}{\textcolor{white}{#6}}\end{minipage}}
		
		% Infos Titre et sous titre
		\put(25,80){\begin{minipage}[t]{180mm}\begin{flushleft}
			\textcolor{gray}{
				\fontsize{50pt}{50pt}\selectfont \textbf{\titre} \\
				\vspace*{25pt}
				\hspace{6mm}\fontsize{35pt}{40pt}\selectfont \textbf{\soustitre}\\
				\vspace*{20pt}}
			\end{flushleft}
			\end{minipage}}

		%Auteur
		\put(33,15){\textcolor{gray}{\fontsize{20pt}{20pt}\textbf{\@author}}}


		\end{picture}
	\end{titlepage}
	\restoregeometry
	%%blank page
	\clearpage
}

